{
    "appId": "com.printec.xcore.logviewer",
    "productName": "XCore Log Viewer",
    "directories": {
        "output": "../output"
    },
    "files": [
        "!**/.vscode",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "extraResources": {
        "from": "../LogViewer.Server/bin/dist/",
        "to": "LogViewer.Server/bin/dist/",
        "filter": [
            "**/*"
        ]
    },
    "win": {
        "target": [
            "nsis"
        ],
        "icon": "logo.png"
    },
    "nsis": {
        "deleteAppDataOnUninstall": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "XCore Log Viewer",
        "artifactName": "XCore.Log.Viewer.Setup.${version}.${ext}",
        "uninstallDisplayName": "XCore Log Viewer (${version})"
    }
}